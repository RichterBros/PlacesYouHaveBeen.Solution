@using PlacesYouHaveBeen.Models;

<h1>Journal Entries</h1>

@if (Model.Count == 0)
{
  <p>There are no entries in the journal.</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li>
      <a href ="/places/@place.Id">@place.PlaceName</a><br>
      <form action="/places/@place.Id" method="post">
        <button type="submit" name="button">Delete</button>
      </form>
    </li>
  }
</ul>

<a href="/places/new">Add a new entry.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>